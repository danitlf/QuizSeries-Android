<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.dani.quizseries.CadastroActivity">

    <android.support.v7.widget.CardView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="#fff"
        app:cardCornerRadius="5dp"
        android:layout_centerInParent="true"
        android:id="@+id/cardView">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cadastro"
                android:textAlignment="center"
                android:textSize="25dp"
                android:id="@+id/labelInserirNickname"/>

            <EditText
                android:paddingTop="30dp"

                android:id="@+id/inputdNickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:textSize="15dp"
                android:hint="Digite um Nickname"
                android:layout_below="@+id/labelInserirNickname"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nickname não deve possuir espaços!"
                android:textAlignment="center"
                android:textSize="10dp"
                android:id="@+id/nicknameTip"
                android:layout_below="@+id/inputdNickname"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_dark"
                android:textColor="#fff"
                android:textSize="20dp"
                android:text="enviar"
                android:layout_marginTop="20dp"
                android:id="@+id/btnEscolherNickname"
                android:layout_below="@+id/nicknameTip"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
