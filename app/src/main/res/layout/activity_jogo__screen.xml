<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dani.quizseries.Jogo_Screen"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:layout_marginRight="5dp"
        android:layout_alignRight="@+id/segundosMarcador"
        android:id="@+id/jogoSegundos"
        android:textColor="#fff"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="'"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:id="@+id/segundosMarcador"
        android:textColor="#fff"/>

    <android.support.v7.widget.CardView
        android:id="@+id/box_pergunta"
        android:layout_width="300dp"

        android:layout_height="150dp"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/box_pergunta_text"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:text="tentativa de test"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_margin="20dp"
            android:textColor="@color/colorPrimaryDark" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/opc1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/opc_pergunta"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp"
        android:layout_below="@+id/box_pergunta"
        android:layout_alignStart="@+id/box_pergunta"
        android:layout_marginTop="30dp"
        android:text="opc1" />

    <Button
        android:id="@+id/opc2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/opc_pergunta"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp"
        android:layout_below="@+id/opc1"
        android:layout_alignStart="@+id/opc1"
        android:layout_marginTop="10dp"
        android:text="opc2" />

    <Button
        android:id="@+id/opc3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/opc_pergunta"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp"
        android:layout_below="@+id/opc2"
        android:layout_alignStart="@+id/opc2"
        android:layout_marginTop="10dp"
        android:text="opc3" />

    <Button
        android:id="@+id/opc4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/opc_pergunta"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp"
        android:layout_below="@+id/opc3"
        android:layout_alignStart="@+id/opc3"
        android:layout_marginTop="10dp"
        android:text="opc4" />






</RelativeLayout>
